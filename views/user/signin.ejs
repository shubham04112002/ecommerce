<%- layout("layouts/boilerplate") %>

<div class="container">
  <div class="row">
    <div class="col-md-8 m-auto">
      <h1 class="mt-4 mb-4">Sign In Page</h1>
      <form
        action="/user/signin"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          />
          <div class="valid-feedback">Looks Good</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label
          ><input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
          <div class="valid-feedback">Looks Good</div>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken  %>" />
        <button class="btn btn-primary button-style">Sign In</button>
      </form>
      <p class="mt-3">
        Don't have an account? <a href="/user/signup">Sign Up!</a>
      </p>
    </div>
  </div>
</div>
<script src="/javascripts/validationForm.js"></script>
